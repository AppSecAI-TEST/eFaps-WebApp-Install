<common-systemconfiguration xmlns="http://www.efaps.org/xsd"
                            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                            xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd">
    <uuid>50a65460-2d08-4ea8-b801-37594e93dad5</uuid>
    <file-application>eFaps-webapp</file-application>
    <file-revision>$Rev$</file-revision>
    <definition>
        <version-expression>(version==latest)</version-expression>
        <name>WebApp-Configuration</name>
        <attribute>
            <key>org.efaps.webapp.StaticContentCacheDuration</key>
            <value>3600</value>
            <description>
       Integer. Duration (in seconds) of a eFapsStaticContent
       in the Cache of the Browser, before it will be retrieved again
       from the eFaps-DataBase.  Default Value is 3600.
            </description>
        </attribute>
        <attribute>
            <key>Picker4Person</key>
            <value>Admin_User_PersonPicker</value>
            <description>
        Defines the Picker for all Person Links like Creator, Modfier etc.
            </description>
        </attribute>
         <attribute>
            <key>org.efaps.webapp.ShowOID</key>
            <value>false</value>
            <description>
        Boolean (true/false). Display the oid of the current object behind the title.
            </description>
        </attribute>
        <attribute>
            <key>org.efaps.webapp.ClassificationTreeExpandState</key>
            <value>to be set for implementation</value>
            <description>
        Properties setting the default expand state of the Tree for Classifications. e.g. Products_Class=false means that the tree will not be expanded. DefaultValue is true.
            </description>
        </attribute>
        <attribute>
            <key>org.efaps.webapp.RecentCacheSize</key>
            <value>5</value>
            <description>Integer: Number of items in the Recent Links menu. Default Value is 5.</description>
        </attribute>
        <attribute>
            <key>org.efaps.webapp.RecentLinkMaxLenght</key>
            <value>25</value>
            <description>Integer: Max Length of the Label inside the Recent Link.</description>
        </attribute>
    </definition>
</common-systemconfiguration>

